toolsets = gnu vs2015 vs2013;

gnu.makefile = ../GNUmakefile/GNUmakefile;
vs2013.solutionfile = ../VC12/Thread1.sln;
vs2015.solutionfile = ../VC14/Thread1.sln;

setting BOOST_ROOT
{
    help = "Path to the Boost installation";
    default = '$(BOOST)';
}

program Thread1
{
    archs = x86 x86_64;

    includedirs += $(BOOST_ROOT);
    libdirs += $(BOOST_ROOT)/stage/lib;

    sources
    {
        ../../Source/main.cpp
    }
}
